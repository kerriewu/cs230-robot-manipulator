      <origin xyz="0 0 0." rpy="0 0 0"/>
      <geometry>
        <cylinder length=".015" radius=".04"/>
      </geometry>
      <material name="blue">
        <color rgba=".2 .6 .9 1.0"/>
      </material>
    </visual>
  </link>
  <joint name="blue_tok_0_link" type="floating">
    <parent link="base"/>
    <child link="blue_tok_0"/>
  </joint>
  
